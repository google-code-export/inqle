<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget">
	<ui:style>
    .mainPanel {
	    width: 100%;
	    height: 100%;
	    align: center;
    }
		.roundPanel {
			width: 300px;
			height: 400px;
		}
		.fieldsPanel {
    
    }
    .message {
	    color: red;
	  }
	</ui:style>
	<g:VerticalPanel ui:field="panel" styleName="{style.mainPanel}">
	<mgwt:RoundPanel ui:field="roundPanel" styleName="{style.roundPanel}">
	 <g:VerticalPanel ui:field="fieldsPanel" styleName="{style.fieldsPanel}">
	   <g:HorizontalPanel ui:field="linkPanel">
	     <g:Label styleName="ttd-form-title" text="Log in using your Beyobe account"/>
	     <g:Anchor ui:field="signupLink" text="Create a new account"/>
	   </g:HorizontalPanel>
		 
		 <g:Label ui:field="message" styleName="{style.message}"/>
		 <g:Label styleName="ttd-form-label" text="Email"/>
		 <g:TextBox ui:field="userName"/>
		 <g:Label styleName="ttd-form-label" text="Password"/>
	   <g:PasswordTextBox ui:field="password"/>
	   <g:Button ui:field="submitButton" text="Sign In"/>
   </g:VerticalPanel>
	</mgwt:RoundPanel>
	</g:VerticalPanel>
</ui:UiBinder> 