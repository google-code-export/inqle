            of the ScrollPanel */
    }
  </ui:style>
  <g:VerticalPanel styleName="{style.tagdayArea}">
		<g:FlowPanel ui:field="tagsPanel" styleName='{style.tagsPanel}'/>
		<g:FlowPanel ui:field="dayPicker" styleName='{style.dayPicker}'/>
<!-- 		<g:ScrollPanel addStyleNames="scrollHorizontal"> -->
		    <g:FlowPanel ui:field="daysPanel"/>
