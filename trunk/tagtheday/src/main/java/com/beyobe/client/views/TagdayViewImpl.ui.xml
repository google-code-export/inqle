<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
                         xmlns:g="urn:import:com.google.gwt.user.client.ui"
                         xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget">
	<ui:style>
.tagdayArea { width: 100%; height: 100%;}
.menuPanel { width: 100%;}
.daysPanel { width: 100%; height: 100%;}
.dayPicker { width: 100%; height: 7px;}
.menuPanelItem { float:left;}
<!--  .addTagButton { -->
<!-- 	color: light-blue; -->
<!-- 	margin: 5px; -->
<!-- 	font-size: 1.2em; -->
<!-- 	} -->
  </ui:style>
  <g:DockLayoutPanel styleName="{style.tagdayArea}">
    <g:north size="38">
<!--       <g:VerticalPanel> -->
		  <g:HorizontalPanel ui:field="menuPanel" styleName='{style.menuPanel}'>
		    <g:HorizontalPanel styleName='{style.menuPanelItem}'>
		      <mgwt:Button ui:field="addTagButton" title="Add a tag" round="false" small="true" text="+"/>
		    </g:HorizontalPanel>
		    
		    <g:HorizontalPanel styleName='{style.menuPanelItem}'>
			    <mgwt:Button ui:field="dayEarlierButton" title="1 day earlier" round="false" small="true" text="←"/>
			    <g:Label ui:field="dateLabel"/>
			    <mgwt:Button ui:field="dayLaterButton" title="1 day later" round="false" small="true" text="→"/>
			  </g:HorizontalPanel>
			  
			  <g:HorizontalPanel styleName='{style.menuPanelItem}'>
			    <mgwt:Button ui:field="monthEarlierButton" title="1 month earlier" round="false" small="true" text="←"/>
	        <g:Label ui:field="monthLabel"/>
	        <mgwt:Button ui:field="monthLaterButton" title="1 month later" round="false" small="true" text="→"/>
	      </g:HorizontalPanel>
	      
	      <g:HorizontalPanel styleName='{style.menuPanelItem}'>
	        <mgwt:Button ui:field="yearEarlierButton" title="1 year earlier" round="false" small="true" text="←"/>
	        <g:Label ui:field="yearLabel"/>
	        <mgwt:Button ui:field="yearLaterButton" title="1 year later" round="false" small="true" text="→"/>
	      </g:HorizontalPanel>
		  </g:HorizontalPanel>
<!-- 		  </g:VerticalPanel> -->
		</g:north>
    <g:center>
      <g:FlowPanel ui:field="daysPanel"/>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>