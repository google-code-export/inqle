<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
                         xmlns:g="urn:import:com.google.gwt.user.client.ui"
                         xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget">
	<ui:style>
.tagdayArea { width: 100%; height: 100%;}
.menuPanel { width: 100%;}
.daysPanel { width: 100%; height: 100%;}
.dayPicker { width: 100%; height: 7px;}
.scrollHorizontal{
        /* 
        overflow-y: hidden !important;
        !important used to force override the style "overflow:scroll"
            of the ScrollPanel */
    }
<!--  .addTagButton { -->
<!-- 	color: light-blue; -->
<!-- 	margin: 5px; -->
<!-- 	font-size: 1.2em; -->
<!-- 	} -->
  </ui:style>
  <g:DockLayoutPanel styleName="{style.tagdayArea}">
    <g:north size="38">
      <g:VerticalPanel>
		  <g:HorizontalPanel ui:field="menuPanel" styleName='{style.menuPanel}'>
		    <mgwt:Button ui:field="addTagButton" title="Add a tag" round="false" small="true" text="+"/>
		  </g:HorizontalPanel>
		  </g:VerticalPanel>
		</g:north>
    <g:center>
      <g:FlowPanel ui:field="daysPanel"/>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>