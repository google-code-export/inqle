<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget">
  <ui:style>
        .mainPanel {
     margin-top: 15px;
      width: 100%;
      height: 100%;
      align: center;
    }
    .roundPanel {
      margin-left: auto;
      margin-right: auto;
    }
    
    .fieldsPanel {
      margin-left: auto;
      margin-right: auto;
    }
    .titleBar {
      
    }
    .message {
      color: red;
    }
    .loginLink {
	     font-size: 0.8em;
	  }
	   .submitButton {
	     margin-top: 5px;
       margin-bottom: 2px;
    }
  </ui:style>
 <g:VerticalPanel ui:field="panel" styleName="{style.mainPanel}">
  <mgwt:RoundPanel ui:field="roundPanel" styleName="{style.roundPanel}">
   <g:VerticalPanel ui:field="fieldsPanel" styleName="{style.fieldsPanel}">
     <g:HorizontalPanel ui:field="titleBar" styleName="{style.titleBar}">
       <g:Label styleName="ttd-form-title" text="Create New Account" />
     </g:HorizontalPanel>
     
     <g:Label ui:field="message" styleName="{style.message}"/>
     <g:Label styleName="ttd-form-label" text="Email"/>
     <g:TextBox ui:field="userName"/>
     <g:Label styleName="ttd-form-label" text="Password"/>
     <g:PasswordTextBox ui:field="password"/>
     <g:Label styleName="ttd-form-label" text="Repeat Password"/>
     <g:PasswordTextBox ui:field="password2"/>
     <g:Button ui:field="submitButton" text="Create Account" styleName="{style.submitButton}"/>
     <g:Anchor ui:field="loginLink" text="Already have an account?" styleName="{style.loginLink}" />
   </g:VerticalPanel>
  </mgwt:RoundPanel>
  </g:VerticalPanel>
</ui:UiBinder> 