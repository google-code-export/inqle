<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
                         xmlns:g="urn:import:com.google.gwt.user.client.ui"
                         xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget">
                         
<ui:with field="icons" type="com.beyobe.client.icons.Icons"/>

	<ui:style>
.tagdayArea { width: 100%; height: 100%;}
.menuPanel { width: 100%;}
.daysPanel { width: 100%; height: 100%;}
.dayPicker { width: 100%; height: 7px;}
.menuPanelItem { float:left; margin:0px;}

.clickableIcon{
        cursor: hand;
        cursor: pointer;            
    }

<!--     .clickableIcon:hover{ -->
<!--         cursor: hand; -->
<!--         cursor: pointer;                         -->
<!--         background-position: 0 -76px; -->
<!--         border: 1px solid blue; -->
<!--     } -->
  </ui:style>
  <g:DockLayoutPanel styleName="{style.tagdayArea}">
<!--     <g:north size="38"> -->
    <g:north size="60">
		  <g:HorizontalPanel ui:field="menuPanel" styleName="{style.menuPanel}">
		    <g:HorizontalPanel styleName='{style.menuPanelItem}'>
          <g:Image ui:field="addTagIcon" title="Add a question" resource="{icons.add32}" styleName="{style.clickableIcon}" />
		    </g:HorizontalPanel>
		    
		    <g:VerticalPanel>
		      <g:HorizontalPanel styleName='{style.menuPanelItem}'>
	          <g:Image ui:field="dayEarlierIcon" title="1 day earlier" resource="{icons.prev24}" styleName="{style.clickableIcon}" />
	          <g:Image ui:field="dayLaterIcon" title="1 day later" resource="{icons.next24}" styleName="{style.clickableIcon}" />
          </g:HorizontalPanel>
          <g:Label ui:field="dateLabel"/>
        </g:VerticalPanel>
			  
			  <g:VerticalPanel>
			    <g:HorizontalPanel styleName='{style.menuPanelItem}'>
				    <g:Image ui:field="monthEarlierIcon" title="1 month earlier" resource="{icons.prev24}" styleName="{style.clickableIcon}" />
	          <g:Image ui:field="monthLaterIcon" title="1 month later" resource="{icons.next24}" styleName="{style.clickableIcon}" />
	        </g:HorizontalPanel>
	        <g:Label ui:field="monthLabel"/>
	      </g:VerticalPanel>
	      
	      <g:VerticalPanel>
	        <g:HorizontalPanel styleName='{style.menuPanelItem}'>
	          <g:Image ui:field="yearEarlierIcon" title="1 year earlier" resource="{icons.prev24}" styleName="{style.clickableIcon}" />
	          <g:Image ui:field="yearLaterIcon" title="1 year later" resource="{icons.next24}" styleName="{style.clickableIcon}" />
	        </g:HorizontalPanel>
	        <g:Label ui:field="yearLabel"/>
	      </g:VerticalPanel>
	      
	       <g:HorizontalPanel styleName='{style.menuPanelItem}' ui:field="toggleImagePanel"/>
<!-- 	         <g:Image ui:field="todayIcon" title="today" resource="{icons.today32}" styleName="{style.clickableIcon}" /> -->
<!-- 	       </g:HorizontalPanel> -->
		  </g:HorizontalPanel>
		</g:north>
    <g:center>
      <mgwt:ScrollPanel>
        <g:FlowPanel ui:field="daysPanel"/>
      </mgwt:ScrollPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>