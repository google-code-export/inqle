<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
                         xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
.tagdayArea { width: 100%; height: 100%;}
.tagsPanel { width: 100%; height: 28px;}
.daysPanel { width: 100%; height: 100%;}
.dayPicker { width: 100%; height: 7px;}
.scrollHorizontal{
        /* 
        overflow-y: hidden !important;
        !important used to force override the style "overflow:scroll"
            of the ScrollPanel */
    }
  </ui:style>
  <g:DockLayoutPanel styleName="{style.tagdayArea}">
    <g:north size="28">
      <g:VerticalPanel>
		  <g:FlowPanel ui:field="tagsPanel" styleName='{style.tagsPanel}'/>
<!-- 		  <g:FlowPanel ui:field="dayPicker" styleName='{style.dayPicker}'/> -->
		  </g:VerticalPanel>
		</g:north>
    <g:center>
      <g:FlowPanel ui:field="daysPanel"/>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>