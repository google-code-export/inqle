<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget">
	<ui:style>
    .mainPanel {
	   margin-top: 15px;
	    width: 100%;
	    height: 100%;
	    align: center;
    }
		.roundPanel {
			margin-left: auto;
			margin-right: auto;
			height: 200px;
		}
		
		.fieldsPanel {
      margin-left: auto;
      margin-right: auto;
    }
    .titleBar {
      margin-left: auto;
      margin-right: auto;
    }
    .message {
	    color: #0B61A4;
	    margin-left: auto;
      margin-right: auto;
	  }
	  .pointerLink {
       cursor:pointer;
       color:blue;
       font-size: 1.1em;
    }
     .submitButton {
       margin-top: 15px;
       margin-bottom: 10px;
       font-size: 1.1em;
    }
	</ui:style>
	<g:VerticalPanel ui:field="panel" styleName="{style.mainPanel}">
	<mgwt:RoundPanel ui:field="roundPanel" styleName="{style.roundPanel}">
	 <g:HorizontalPanel ui:field="titleBar" styleName="{style.titleBar}">
     <g:Label styleName="ttd-form-title" text="Sign In to Beyobe" />
   </g:HorizontalPanel>
   <g:HorizontalPanel styleName="{style.titleBar}">
      <g:Label ui:field="message" styleName="{style.message}"/>
   </g:HorizontalPanel>
   
	 <g:VerticalPanel ui:field="fieldsPanel" styleName="{style.fieldsPanel}">
	   
		 <g:Label styleName="ttd-form-label" text="Login"/>
		 <g:TextBox ui:field="userName"/>
		 <g:Label styleName="ttd-form-label" text="Password"/>
	   <g:PasswordTextBox ui:field="password"/>
	   <g:Button ui:field="submitButton" text="Sign In" styleName="{style.submitButton}"/>
	   <g:Anchor ui:field="signupLink" text="Create a new account"  styleName="{style.pointerLink}"/>
   </g:VerticalPanel>
	</mgwt:RoundPanel>
	</g:VerticalPanel>
</ui:UiBinder> 