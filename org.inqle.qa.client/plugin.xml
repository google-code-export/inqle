<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.inqle.ecf.servers">
   		<ecfServer
   			uri="ecftcp://localhost:3787/server1"
   			port="3787"
   			protocol="ecf.generic.client"/>
   		<!--
   		<ecfServer
   			uri="ecftcp://localhost:3788/server2"
   			port="3788"
   			protocol="ecf.generic.client"/>
   		<ecfServer
   			uri="http://localhost:3797/server1"
   			port="3797"
   			protocol="ecf.rest.client"/>
   			
   		<ecfServer
   			uri="http://localhost:3798/server2"
   			port="3798"
   			protocol="ecf.rest.client"/>
   			-->
   </extension>
   
   <!--DONT: Disable this until ECF can handle registering services-->
   <extension
         point="org.inqle.ecf.services">
   		<ecfService
   			serviceInterfaceName="org.inqle.ecf.services.IHello"
   			serviceClassName="org.inqle.ecf.services.Hello"
   			clientProtocol="ecf.generic.client"
   			serverProtocol="ecf.generic.server"
   			consume="true"
   			produce="false"/>

   		<ecfService
   			serviceInterfaceName="org.inqle.qa.ecf.services.IHello2"
   			serviceClassName="org.inqle.qa.ecf.services.Hello2"
   			clientProtocol="ecf.generic.client"
   			serverProtocol="ecf.generic.server"
   			consume="true"
   			produce="false"/>
   			
   		<ecfService
   			serviceInterfaceName="org.inqle.qa.services.IQAObjectService"
   			serviceClassName="org.inqle.qa.services.QAObjectService"
   			clientProtocol="ecf.generic.client"
   			serverProtocol="ecf.generic.server"
   			consume="true"
   			produce="false"/>
   			
   		<ecfService
   			serviceInterfaceName="org.inqle.rdf.sparql.ISparqlService"
   			serviceClassName="org.inqle.rdf.sparql.SparqlService"
   			clientProtocol="ecf.rest.client"
   			serverProtocol="ecf.rest.client"
   			produce="false"
   			consume="true"/>
   </extension>
</plugin>
